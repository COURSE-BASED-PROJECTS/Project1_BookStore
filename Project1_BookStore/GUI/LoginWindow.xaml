<Window x:Class="Project1_BookStore.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project1_BookStore"
        xmlns:utils="clr-namespace:Project1_BookStore.Utils"
        mc:Ignorable="d"
        Title="LoginWindow" FontFamily="Inter" Height="727" Width="1234" WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent" Loaded="Window_Loaded">
    <Window.Resources>
        <utils:RelativeToAbsoluteConverter x:Key="absoluteConverter"/>
    </Window.Resources>
    <Border Background="#FAD49D" BorderBrush="Transparent" CornerRadius="35">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1106*"/>
                <ColumnDefinition Width="103*"/>
                <ColumnDefinition Width="25*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="30*"/>
                <RowDefinition Height="697*"/>
            </Grid.RowDefinitions>

            <UniformGrid Grid.Column="1" Grid.Row="1" Rows="1">
                <Border CornerRadius="50" Margin="0,0,4,0">
                    <Border.Background>
                        <SolidColorBrush Color="White" Opacity="0.5"/>
                    </Border.Background>
                    <Button x:Name="minButton" BorderThickness="0" Height="15" Width="15"
                             Click="minButton_Click">
                        <Button.Background>
                            <ImageBrush ImageSource="{Binding pathClosePressed, Converter={StaticResource absoluteConverter}}"/>
                        </Button.Background>
                    </Button>
                </Border>
                <Border CornerRadius="50" Margin="2,0,2,0">
                    <Border.Background>
                        <SolidColorBrush Color="White" Opacity="0.5"/>
                    </Border.Background>
                    <Button x:Name="maxButton" BorderThickness="0" Height="10" Width="10"
                             Click="maxButton_Click">
                        <Button.Background>
                            <ImageBrush ImageSource="{Binding pathClose, Converter={StaticResource absoluteConverter}}"/>
                        </Button.Background>
                    </Button>
                </Border>
                <Border CornerRadius="50" Margin="3,0,0,0">
                    <Border.Background>
                        <SolidColorBrush Color="White" Opacity="0.5"/>
                    </Border.Background>
                    <Button x:Name="closeButton" BorderThickness="0" Height="20" Width="20" 
                             Click="closeButton_Click">
                        <Button.Background>
                            <ImageBrush ImageSource="{Binding pathClose, Converter={StaticResource absoluteConverter}}"/>
                        </Button.Background>
                    </Button>
                </Border>
            </UniformGrid>
        </Grid>
    </Border>
</Window>
