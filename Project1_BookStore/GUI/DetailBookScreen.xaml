<Window x:Class="Project1_BookStore.GUI.DetailBookScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project1_BookStore.GUI"
        xmlns:utils="clr-namespace:Project1_BookStore.Utils"
        mc:Ignorable="d"
        Title="DetailBook" FontFamily="Inter" Height="727" Width="1234" WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent" Loaded="Window_Loaded">
    <Window.Resources>
        <utils:RelativeToAbsoluteConverter x:Key="absoluteConverter"/>
    </Window.Resources>
    <Grid>
        <Border Background="#FFFFFF" BorderBrush="#EBECF0"
                    BorderThickness="3"
                    CornerRadius="20" x:Name="border"/>

        <Border Background="#EBECF0" BorderBrush="#EBECF0"
        BorderThickness="3"
        CornerRadius="35">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="38*"/>
                    <RowDefinition Height="450*"/>
                </Grid.RowDefinitions>

                <!--Row - 1-->
                <Grid Grid.Row="0">
                    <TextBlock Text="Quản lý sản phầm > Nói chuyện là bản năng, Giữ miệng là tu dưỡng, Im lặng là trí tuệ"
                               FontSize="15"
                               FontWeight="Medium"
                               Margin="20,25,0,0"
                               HorizontalAlignment="Left">
                    </TextBlock>


                    <StackPanel Orientation="Horizontal"
                                Width="110" Height="28"
                                HorizontalAlignment="Right"
                                Margin="0,10,20,0">
                        <Border CornerRadius="50" Margin="0,0,5,0" Width="29">
                            <Border.Background>
                                <SolidColorBrush Color="White" Opacity="0.6"/>
                            </Border.Background>
                            <Button x:Name="minButton" BorderThickness="0" Height="20" Width="20"
                                 Click="minButton_Click">
                                <Button.Background>
                                    <ImageBrush ImageSource="{Binding pathMinBtn, Converter={StaticResource absoluteConverter}}"/>

                                </Button.Background>
                            </Button>
                        </Border>
                        <Border CornerRadius="50" Margin="5,0,5,0" Width="29">
                            <Border.Background>
                                <SolidColorBrush Color="White" Opacity="0.6"/>
                            </Border.Background>
                            <Button x:Name="maxButton" BorderThickness="0" Height="15" Width="15"
                                 Click="maxButton_Click">
                                <Button.Background>
                                    <ImageBrush ImageSource="{Binding pathMaxBtn, Converter={StaticResource absoluteConverter}}"/>
                                </Button.Background>
                            </Button>
                        </Border>
                        <Border CornerRadius="50" Margin="5,0,0,0" Width="29">
                            <Border.Background>
                                <SolidColorBrush Color="White" Opacity="0.6"/>
                            </Border.Background>
                            <Button x:Name="closeButton" BorderThickness="0" Height="25" Width="25" 
                                 Click="closeButton_Click">
                                <Button.Background>
                                    <ImageBrush ImageSource="{Binding pathCloseBtn, Converter={StaticResource absoluteConverter}}"/>
                                </Button.Background>
                            </Button>
                        </Border>
                    </StackPanel>

                </Grid>

                <!--Row - 2-->
                <Grid Grid.Row="1">
                    <Grid Height="617" Width="1000"
                          Background="#F9FAFB">

                        <!--using border element above for child-->
                        <Grid.OpacityMask>
                            <VisualBrush Visual="{Binding ElementName=border}" />
                        </Grid.OpacityMask>
                        <Grid.Effect>
                            <DropShadowEffect BlurRadius="20"
                              Color="#877b77"
                              Opacity="100"
                              ShadowDepth="0"
                              Direction="0" />
                        </Grid.Effect>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>

                        <!--Column - 1-->
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="4.5*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!--Row - 1-->
                            <Grid Grid.Row="0" Width="308"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Height="400">
                                <Image Source="{Binding logo, Converter={StaticResource absoluteConverter}}" Margin="0,7,0,0"></Image>
                            </Grid>

                            <Grid Grid.Row="1">
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center">
                                    <Grid Width="64" Height="72" 
                                          Margin="5,0,5,0">
                                        <Image Source="{Binding logo, Converter={StaticResource absoluteConverter}}"></Image>
                                    </Grid>

                                    <Grid Width="64" Height="72"
                                           Margin="5,0,5,0">
                                        <Image Source="{Binding logo, Converter={StaticResource absoluteConverter}}"></Image>
                                    </Grid>

                                    <Grid Width="64" Height="72"
                                           Margin="5,0,5,0">
                                        <Image Source="{Binding logo, Converter={StaticResource absoluteConverter}}"></Image>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </Grid>

                        <!--Column - 2-->
                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="5*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!--Row - 1-->
                            <Grid Grid.Row="0">
                                <TextBlock Text="Nói chuyện là bản năng, Giữ miệng là tu dưỡng, Im lặng là trí tuệ"
                                       FontSize="25"
                                       FontWeight="Medium"
                                       Foreground="#6B34C3"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"
                                       TextAlignment="Center"
                                       TextWrapping="Wrap"
                                       Margin="109,60,0,0" Height="60"
                                           Width="450"></TextBlock>
                            </Grid>

                            <!--Row - 2-->
                            <Grid Grid.Row="1">
                                <Grid Width="442" Height="334"
                                      Background="#FFFFFF"
                                      Margin="0,15,0,0">
                                    <Grid.Effect>
                                        <DropShadowEffect BlurRadius="20"
                                          Color="#877b77"
                                          Opacity="100"
                                          ShadowDepth="5"
                                          Direction="0" />
                                    </Grid.Effect>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="10*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!--Column - 1-->
                                    <Grid Grid.Column="0">
                                        <StackPanel>
                                            <TextBlock Margin="15">
                                                <Label Content="Mã sách:"
                                                       FontSize="14"/>
                                                <Label Content="B005"
                                                       FontSize="16"
                                                       FontWeight="Medium" Height="29"></Label>
                                            </TextBlock>

                                            <TextBlock Margin="15">
                                                <Label Content="Tác giả:"
                                                       FontSize="14"/>
                                                <Label Content="Trương Tiểu Hằng"
                                                       FontSize="16"
                                                       FontWeight="Medium" Height="29"></Label>
                                            </TextBlock>

                                            <TextBlock Margin="15">
                                                <Label Content="Năm phát hành:"
                                                       FontSize="14"/>
                                                <Label Content="2019"
                                                       FontSize="16"
                                                       FontWeight="Medium" Height="29"></Label>
                                            </TextBlock>

                                            <TextBlock Margin="15">
                                                <Label Content="Giá tiền:"
                                                       FontSize="14"/>
                                                <Label Content="127.000đ"
                                                       FontSize="16"
                                                       FontWeight="Medium" Height="29"></Label>
                                            </TextBlock>

                                            <TextBlock Margin="15">
                                                <Label Content="Số lượng:"
                                                       FontSize="14"/>
                                                <Label Content="12"
                                                       FontSize="16"
                                                       FontWeight="Medium" Height="29"></Label>
                                            </TextBlock>
                                        </StackPanel>
                                    </Grid>

                                    <!--Column - 2-->
                                    <Grid Grid.Column="1"
                                          Width="20" Height="20"
                                          VerticalAlignment="Top"
                                          Margin="10"
                                          Cursor="Hand">
                                        <Image Source="{Binding modify, Converter={StaticResource absoluteConverter}}"></Image>
                                    </Grid>
                                </Grid>
                            </Grid>
                            
                            <!--Row - 3-->
                            <Grid Grid.Row="2">
                                <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                            Margin="110,0,0,0">
                                    <Border CornerRadius="20">
                                        <Button Width="100" Height="35"  Background="Green">
                                            <Label Foreground="White">Lưu</Label>
                                            <Button.Resources>
                                                <Style TargetType="{x:Type Border}">
                                                    <Setter Property="CornerRadius" Value="5"/>
                                                </Style>
                                            </Button.Resources>
                                        </Button>
                                    </Border>

                                    <Border CornerRadius="20" Margin="20,0,0,0">
                                        <Button Width="150" Height="35" Background="Red">
                                            <Label Foreground="White">Xóa sản phẩm</Label>
                                            <Button.Resources>
                                                <Style TargetType="{x:Type Border}">
                                                    <Setter Property="CornerRadius" Value="5"/>
                                                </Style>
                                            </Button.Resources>
                                        </Button>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
